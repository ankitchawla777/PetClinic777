                @Html.DropDownListFor(model => model.cId, (SelectList)ViewBag.Customers, "Select Customer", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.rNo, htmlAttributes: new { @class = "control-label col-md-2" })
